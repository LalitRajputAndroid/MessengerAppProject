<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statusSinglerow_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/statuscirclerview_id"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <com.devlomi.circularstatusview.CircularStatusView
            android:id="@+id/circular_status_view"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            app:portion_color="#25AF92"
            app:portion_spacing="4dp"
            app:portion_width="3dp"
            app:portions_count="5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/relativeLayout2_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_Pname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lalit"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_Ptime_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>